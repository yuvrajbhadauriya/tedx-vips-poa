        }
        .modal-content {
            background-color: #1F2937;
            margin: 10% auto;
            padding: 2rem;
            border: 1px solid #4B5563;
            width: 80%;
            max-width: 600px;
            border-radius: 10px;
            animation: fadeIn 0.5s;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: scale(0.9); }
            to { opacity: 1; transform: scale(1); }
        }
        .close-button {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }
